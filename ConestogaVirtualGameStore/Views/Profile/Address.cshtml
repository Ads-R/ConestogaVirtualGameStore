@model AddressModel
@{
    Layout = "_LayoutMemberPanel";
}
<span class="text-white bg-success">@TempData["Success"]</span>
<h1>Address Page</h1>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MailingAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MailingAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingAddress)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="UpdateAddress" class="btn btn-primary">Update Address</a>
    <br /><br />
</div>