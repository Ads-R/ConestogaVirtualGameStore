@model IEnumerable<ConestogaVirtualGameStore.Models.GameModel>
@{
    Layout = "_LayoutAdminPanel";
}

<h2>Game Details</h2>
<form asp-action="Index" asp-controller="Report">
    <p style="display:inline;">
        Choose a Report Type:
        <select name="ReportType">
            <option value="">Select Report</option>
            <option value="GameList">Game List Report</option>
            <option value="GameDetail">Game Detail Report</option>
            <option value="MemberList">Member List Report</option>
            <option value="MemberDetail">Member Detail Report</option>
            <option value="WishList">Wish List Report</option>
            <option value="SalesList">Sales Report</option>
        </select>
        <input type="submit" value="Get Report" class="btn btn-primary" />
    </p>
</form>

<br />
<a asp-action="DownloadGameDetailReport" style="color:green;">Download Report</a>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Game Detail</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearReleased)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RetailPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Platform)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Image
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearReleased)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetailPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Platform)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="@("~/Images/GameCovers/"+@item.ImageName)" asp-append-version="true" width="100px" height="100px" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
