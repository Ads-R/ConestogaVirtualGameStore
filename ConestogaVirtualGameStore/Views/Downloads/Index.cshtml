@model IEnumerable<ConestogaVirtualGameStore.Models.GameModel>
@{
    Layout = "_LayoutMemberPanel";
}

<span class="text-white bg-danger">@TempData["UnauthorizedDownload"]</span>
<span class="text-white bg-danger">@TempData["DownloadException"]</span>
<br />

<h1>My Games</h1>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Games</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearReleased)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearReleased)
                    </td>
                    <td>
                        <form asp-action="DownloadGame">
                            <input type="hidden" name="GameId" value="@item.Id" />
                            <div><input type="submit" value="Download" class="btn btn-info"/></div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
