@model IEnumerable<ConestogaVirtualGameStore.Models.EventParticipantsModel>
@{
    Layout = "_LayoutMemberPanel";
}
<span class="text-white bg-success" id="creditSuccess">@TempData["RESuccess"]</span>
<span class="text-white bg-danger">@TempData["REException"]</span>
<h2>Events Available For Registration</h2>

<p>
    <a asp-action="AllRegistrations">Show All Registered Events</a>
  
</p>
@foreach (var item in ViewBag.Events){

    <div class="card">
        <div class="card-header">
            @item.EventName
        </div>

        <div class="card-body">
            <p class="fs-5">@String.Format("{0:d}",item.EventStartDate) - @String.Format("{0:d}",item.EventEndDate)</p>
            <p>@item.EventDescription</p>
            <form asp-controller="EventParticipants" asp-action="Registration" method="post">
                <input type="hidden" name="EventId" value="@item.EventModelId" />
                <input type="submit" value="Register" id="btnRegister_@item.EventModelId" class="btn-primary" />

            </form>
        </div>
    </div>
    <br/>
}
    
